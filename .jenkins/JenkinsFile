pipeline {
    agent any

    environment {
        NODE_ENV = 'production'
        PORT = '5000'
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/Alauddin-24434/islamic-Quotes-Management-backend.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                sh 'pnpm install'
            }
        }

        /*
        stage('Run Tests') {
            steps {
                echo 'Running tests...'
                sh 'pnpm test'
            }
        }
        */

        stage('Build') {
            steps {
                sh 'pnpm run build'
            }
        }

        stage('Deploy') {
            steps {
                sh '''
                pm2 stop islamic-quotes-backend || true
                pm2 start npm --name "islamic-quotes-backend" -- start
                '''
            }
        }
    }

    post {
        success {
            echo 'Build & Deploy successful!'
        }
        failure {
            echo 'Something went wrong!'
        }
    }
}
